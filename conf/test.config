/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/extractcoding -profile test
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h

  // Input data
  // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
  // TODO nf-core: Give any required params for the test so that command line flags are not needed
  singleEnd = true
  peptide_fasta = "https://raw.githubusercontent.com/czbiohub/test-datasets/extractcoding/reference/gencode.v32.pc_translations.subsample5.randomseed0.fa"
  readPaths = [
    ['gencode.v32.pc_transcripts.subsample5.randomseed0', ['https://raw.githubusercontent.com/czbiohub/test-datasets/extractcoding/testdata/gencode.v32.pc_transcripts.subsample5.randomseed0.fa']],
  ]
  peptide_ksizes = '3,4'

}
